<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<%= form_tag(artists_path, :method => "get", id: "search-form", remote: true) do %>
    <!-- text field tag=action,args,identifier,placeholdertext... -->
    <%= text_field_tag :search, params[:search], class: "search-query", placeholder: "namesearch", type: "search", data: {autocomplete: autocomplete_artist_name_artists_path} %>
    <%= submit_tag "Search" %>
<% end %>
<script type="text/javascript" charset="utf-8">
    $('#search').bind('railsAutocomplete.select', function(event, data){
      $('#search-form').submit()
    });
</script>

<table id="artist">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <%= render 'artists' %>
</table>
<br>

<%= link_to 'New Artist', new_artist_path %>
